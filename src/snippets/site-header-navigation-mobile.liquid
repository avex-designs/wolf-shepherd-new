<nav js-nav="mobile" role="navigation" class="site-header__navigation">

  <div class="mobile-navigation">

    <div class="mobile-navigation__search">
      {% include 'search-form--basic' %}
    </div>

    <ul class="mobile-navigation__list">

      {% for link in linklists[section.settings.main_linklist].links %}
        {%- assign child_list_handle = link.title | handleize -%}
        {% if menus[child_list_handle].links != blank %}
          <li class="site-nav--has-submenu{% if link.active %} site-nav--active{% endif %}" data-meganav-parent="{{ link.title | handle }}">
            <a href="{{ link.url }}" class="site-nav__link">
              {{ link.title }}
              <span class="dropdown-arrow dropdown-close">{% comment %}<img src="{{ 'icon-angle-down.svg' | asset_url }}">{% endcomment %}</span>
              <span class="desktop--hide dropdown-arrow dropdown-open">{% comment %}<img src="{{ 'icon-angle-up.svg' | asset_url }}">{% endcomment %}</span>
              
            </a>
            
            <ul class="site-nav__submenu">
              {% for childlink in menus[child_list_handle].links %}
                <li {% if childlink.active %}class="site-nav--active"{% endif %}>
                  <a href="{{ childlink.url }}" class="site-nav__link">{{ childlink.title | escape }}</a>


                </li>
              {% endfor %}
            </ul>
          </li>
        {% else %}
          <li {% if link.active %}class="site-nav--active"{% endif %} data-meganav-parent="{{ link.title | handle }}">
            <a href="{{ link.url }}" class="site-nav__link">{{ link.title }}
              <span class="desktop--hide dropdown-arrow dropdown-close">{% comment %}<img src="{{ 'icon-angle-down.svg' | asset_url }}">{% endcomment %}</span>
              <span class="desktop--hide dropdown-arrow dropdown-open">{% comment %}<img src="{{ 'icon-angle-up.svg' | asset_url }}">{% endcomment %}</span>
            </a>
          </li>
        {% endif %}
      {% endfor %}

    </ul>

  </div>

</nav>




  