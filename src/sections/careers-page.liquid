{% include 'hero-image' type: 'section' %}

{% include 'sub-menu' %}

<div class="page-width">
  <div class="grid">
    <div class="grid__item small--one-whole medium-up--one-half large-up--five-twelfths large-up--push-one-twelfth">
      <div class="rte">
        <h1 class="contact__main-title">{{ page.title }}</h1>
        {{ page.content }}
      </div>
    </div>

    <div class="grid__item small--one-whole medium-up--one-half large-up--five-twelfths large-up--push-one-twelfth contact__form">
      {% for block in section.blocks %}
        <h3 class="h3--ms">{{block.settings.title}}</h3>
        <p>{{block.settings.text}}</p>
        <a href="{{block.settings.button_url}}" target="_blank" class="button--white button--white--compress" title="{{block.settings.button_label}}">{{block.settings.button_label}}</a>
      {% endfor %}
    </div>
  </div>
</div>
 
{% schema %}
  {
    "name": "Careers page",
    "settings": [
      {
        "type": "header",
        "content": "Careers Settings"
      },
      {
        "type": "link_list",
        "id": "linklist",
        "label": "Navigation"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "body",
        "label": "Text"
      }
    ],
    "blocks": [
      {
        "type": "job",
        "name": "Job",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "textarea",
            "id": "text",
            "label": "Body"
          },
          {
            "type": "text",
            "id": "button_label",
            "label": "Button label"
          },
          {
            "type": "url",
            "id": "button_url",
            "label": "Button url"
          }
        ]
      }
    ]
  }
{% endschema %}