<div class="article">
  {%- for block in section.blocks -%}
    {% if block.type == 'image_slider' %}
      <div class="page-width {{block.settings.margin_bottom}}">
        <div class="grid">
          <div class="grid__item medium-up--one-whole large-up--ten-twelfths large-up--push-one-twelfth">
            <div class="article__slider">
              {% for i in (1..5) %}
                {% assign image = 'image_' | append: i %}
                {% if block.settings[image] %}
                  <img src="{{block.settings[image] | img_url: 'master' }}">
                {% endif %}
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    {% elsif block.type == 'hero' %}
      {% include 'hero-image' with type: 'block' %}
    {% elsif block.type == 'image_with_text' %}
      {% include 'image-and-text' with type: 'block' %}
    {% elsif block.type == 'featured_collection' %}
      {% include 'ambassador-featured-collection' %}
    {% endif %}
  {%- endfor -%}
</div>

