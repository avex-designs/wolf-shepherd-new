{% include 'sub-menu' %}

{% include 'header' with title: page.title, text: page.content %}

<div class="page-width">
  <div class="grid">
    <div class="grid__item medium-up--one-whole large-up--eight-twelfths large-up--push-two-twelfths">
  
      <ul class="accordion accordion--large">

        {% for block in section.blocks %}
          {% if block.type == 'accordion' %}
            <li class="accordion__item" js-accordion="item">
              <button tabindex="0" class="accordion__control h6" js-accordion="control">
                {{block.settings.title}} 
                <span class="accordion__arrow-up accordion__arrow"></span>
                <span class="accordion__arrow accordion__arrow-down"></span>
              </button>

              <div id="content-1" class="accordion__content" js-accordion="content">
                {{block.settings.text}}
              </div>
            </li>
          {% else %}
            <li class="accordion__section-title 
              {% if block.settings.center %}accordion__section-title--center{% endif %}
              {% if forloop.first%}accordion__section-title--first{% endif %}">
              <h3>{{block.settings.title}}</h3>
            </li>
          {% endif %}
        {% endfor %}

      </ul>

    </div>
  </div>
</div>

