
{% if section.settings.full-width != 'full-width' %}<div class="page-width page-width--hero-image">{% endif %}
  <div class="hero-image--50-50 {{ section.settings.margin_bottom }}">
    {%- for block in section.blocks -%}
      <div class="hero-image--50-50__video-ratio {{ block.settings.mobile_enable }}">
        {% include 'hero-image' type: 'Two blocks' %}
      </div>
    {%- endfor -%}
  </div>
{% if section.settings.full-width != 'full-width' %}</div>{% endif %}
 
{% schema %}
  {
    "name": "Image with text overlay",
    "class": "index-section index-section--flush",
    "max_blocks": 2,
    "settings": [
      {
        "type": "select",
        "id": "full-width",
        "label": "Full width",
        "default": "full-width",
        "options": [
          {
            "label": "Full width",
            "value": "full-width"
          },
          {
            "label": "Within wrapper",
            "value": "wrapper"
          }
        ]
      },
      {
        "type": "select",
        "id": "margin_bottom",
        "label": "Margin bottom",
        "default": "no-margin",
        "options": [
          {
            "label": "Margin bottom",
            "value": "section-margin-bottom"
          },
          {
            "label": "No margin",
            "value": "no-margin"
          }
        ]
      }
    ],
    "blocks": [
      {
        "type": "image_block",
        "name": "New Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Desktop Image",
            "info": "Advised size:"
          },
          {
            "type": "text",
            "id": "mp4",
            "label": "Auto play mp4",
            "info": "Advised size:"
          },
          {
            "type": "text",
            "id": "ogg",
            "label": "Auto play ogg",
            "info": "Advised size:"
          },
          {
            "type": "select",
            "id": "positionX",
            "label": "Text position horizontal",
            "default": "hero-image--center",
            "options": [
              {
                "value": "hero-image--left",
                "label": "Left"
              },
              {
                "value": "hero-image--center",
                "label": "Center"
              },
              {
                "value": "hero-image--right",
                "label": "Right"
              }
            ]
          },
          {
            "type": "select",
            "id": "positionY",
            "label": "Text position vertical",
            "default": "hero-image--middle",
            "options": [
              {
                "value": "hero-image--top",
                "label": "Top"
              },
              {
                "value": "hero-image--middle",
                "label": "Middle"
              },
              {
                "value": "hero-image--bottom",
                "label": "Bottom"
              }
            ]
          },
          {
            "type": "select",
            "id": "alignment",
            "label": "Text alignment",
            "default": "hero-image--text-center",
            "options": [
              {
                "value": "hero-image--text-left",
                "label": "Left"
              },
              {
                "value": "hero-image--text-center",
                "label": "Center"
              },
              {
                "value": "hero-image--text-right",
                "label": "Right"
              }
            ]
          },
          {
            "type": "select",
            "id": "text_color",
            "label": "Text colour",
            "default": "hero-image--black",
            "options": [
              {
                "label": "Light",
                "value": "hero-image--white"
              },
              {
                "label": "Dark",
                "value": "hero-image--black"
              }
            ]
          },
          {
            "type": "select",
            "id": "text_size",
            "label": "Text size",
            "default": "d1",
            "options": [
              {
                "label": "XLarge",
                "value": "d1"
              },
              {
                "label": "Large",
                "value": "d2"
              }
            ]
          },
          {
            "type": "richtext",
            "id": "title",
            "label": "Heading",
            "default": "<p>Image with text overlay</p>"
          },   
          {
            "type": "text",
            "id": "button_label",
            "label": "Button label"
          },
          {
            "type": "url",
            "id": "button_link",
            "label": "Button link"
          },
          {
            "type": "select",
            "id": "button_color",
            "label": "Button colour",
            "default": "button button--black",
            "options": [
              {
                "label": "Light",
                "value": "button--white"
              },
              {
                "label": "Dark",
                "value": "button button--black"
              }
            ]
          },
          {
            "type": "header",
            "content": "Mobile only settings"
          },
          {
            "type": "select",
            "id": "mobile_enable",
            "label": "Mobile Enable",
            "default": "hero-image--50-50__mobile-show",
            "options": [
              {
                "label": "Show",
                "value": "hero-image--50-50__mobile-show"
              },
              {
                "label": "Hide",
                "value": "hero-image--50-50__mobile-hide"
              }
            ]
          },
          {
            "type": "image_picker",
            "id": "mobile_image",
            "label": "Mobile Image",
            "info": "Advised size:"
          },
          {
            "type": "select",
            "id": "mobile_text_position",
            "label": "Mobile text position",
            "default": "hero-image--mobile-text-overlay",
            "options": [
              {
                "label": "Text under",
                "value": "hero-image--mobile-text-under"
              },
              {
                "label": "Text overlay",
                "value": "hero-image--mobile-text-overlay"
              }
            ]
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Hero Image - 50/50",
        "category": "Image"
      }
    ]
  }
{% endschema %}