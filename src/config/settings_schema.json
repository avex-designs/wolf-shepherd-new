[
  {
    "name": "theme_info",
    "theme_name": "Breadcrumbs",
    "theme_version": "1.0.0",
    "theme_author": "Shopify",
    "theme_documentation_url": "https://github.com/Shopify/starter-theme",
    "theme_support_url": "https://github.com/Shopify/starter-theme/issues"
  },
  {
    "name": "Developer mode",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_developer_mode",
        "label": "Enable developer mode",
        "default": false
      },
      {
        "type": "header",
        "content": "Preview bar"
      },
      {
        "type": "checkbox",
        "id": "hide_shopify_preview_bar",
        "label": "Hide Shopify preview bar"
      },
      {
        "type": "range",
        "id": "hide_shopify_preview_bar_timer",
        "unit": "s",
        "label": "Duration",
        "min": 1,
        "max": 9,
        "step": 1,
        "default": 3
      }
    ]
  },
  {
    "name": "Social media",
    "settings": [
      {
        "type": "header",
        "content": "Social sharing image"
      },
      {
        "type": "image_picker",
        "id": "share_image",
        "label": "Image",
        "info": "Shown when sharing a link on social media. [Learn more](https://help.shopify.com/manual/using-themes/troubleshooting/showing-social-media-thumbnail-images/) about image thumbnails."
      },
      {
        "type": "header",
        "content": "Social sharing options"
      },
      {
        "type": "checkbox",
        "id": "social_sharing_blog",
        "label": "Enable sharing for blog articles",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "share_facebook",
        "label": "Share on Facebook",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "share_twitter",
        "label": "Tweet on Twitter",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "share_pinterest",
        "label": "Pin on Pinterest",
        "default": true
      },
      {
        "type": "header",
        "content": "Sharing links"
      },
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "Twitter link"
      },
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook link"
      },
      {
        "type": "text",
        "id": "social_pinterest_link",
        "label": "Pinterest link"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram link"
      },
      {
        "type": "text",
        "id": "social_snapchat_link",
        "label": "Snapchat link"
      },
      {
        "type": "text",
        "id": "social_tumblr_link",
        "label": "Tumblr link"
      },
      {
        "type": "text",
        "id": "social_youtube_link",
        "label": "Youtube link"
      },
      {
        "type": "text",
        "id": "social_vimeo_link",
        "label": "Vimeo link"
      }
    ]
  },
  {
    "name": "Header",
    "settings": [
      {
        "type": "checkbox",
        "id": "stickynav_enable",
        "label": "Enable Sticky navigation",
        "default": true
      },
      {
        "type": "select",
        "id": "notification_position",
        "label": "Notification Position",
        "default": "below",
        "options": [
          {
            "label": "Above Header",
            "value": "above"
          },
          {
            "label": "Below Header",
            "value": "below"
          }
        ]
      }
    ]
  },
  {
    "name": "Collection",
    "settings": [
      {
        "type": "header",
        "content": "Product Grid item"
      },
      {
        "type": "select",
        "id": "low_in_stock",
        "label": "Low in stock threshold",
        "default": "Off",
        "options": [
          {
            "value": "1",
            "label": "1"
          },
          {
            "value": "2",
            "label": "2"
          },
          {
            "value": "3",
            "label": "3"
          },
          {
            "value": "4",
            "label": "4"
          },
          {
            "value": "5",
            "label": "5"
          },
          {
            "value": "6",
            "label": "6"
          },
          {
            "value": "7",
            "label": "7"
          },
          {
            "value": "Off",
            "label": "Off"
          }
        ]
      }
    ]
  },

  {
    "name": "Product",
    "settings": [
      {
        "type": "header",
        "content": "Product Information"
      },
      {
        "type": "checkbox",
        "id": "show_swatches",
        "label": "Show swatches",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_swatches_collection",
        "label": "Swatches on collection grid",
        "default": true
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "header",
        "content": "Cart Page"
      },
      {
        "type": "checkbox",
        "id": "cart_notes_enable",
        "label": "Enable cart notes",
        "default": true
      },
      {
        "type": "header",
        "content": "Ajax Cart settings"
      },
      {
        "type": "checkbox",
        "id": "ajax_cart",
        "label": "Enable Slide out cart",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "mini_cart",
        "label": "Enable mini cart",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "freeshipping_enable",
        "label": "Enable Freeshipping",
        "default": false
      },
      {
        "type": "number",
        "id": "freeshipping_threshold",
        "label": "Freeshipping Threshold"
      },
      {
        "type": "checkbox",
        "id": "collection_enable",
        "label": "Enable Ajax Upsell",
        "default": false
      },
      {
        "type": "collection",
        "id": "collection",
        "label": "Upsell products collection"
      }
    ]
  },
  {
    "name": "Gift Wrapping",
    "settings": [
      {
        "type": "header",
        "content": "Gift Wrapping"
      },
      {
        "type": "checkbox",
        "id": "enable_gift_wrapping",
        "label": "Enable Gift Wrapping",
        "default": false
      },
      {
        "type": "product",
        "id": "gift_wrap_product",
        "label": "Gift wrap prouct"
      }
    ]
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon image",
        "info": "Will be scaled down to 32 x 32px"
      }
    ]
  }
]
