<div class="page-width">
  {% paginate search.results by 16 %}
  <div class="grid search-header">
    <div class="grid__item medium-up--one-whole text-center">
      {% if search.performed %}
        <h1>Your search for “{{search.terms}}” revealed the following:</h1>
      {% else %}
        <h1>{{ 'general.search.title' | t }}</h1>
      {% endif %}

      {% include 'search-form--basic' %}
    </div>
  </div>

  {% if search.performed %}
  
      <div class="grid">
        {% for item in search.results %}
          {% if item.object_type == 'product' %}
            {% assign product = item %}
            {% include 'collection-grid-product'  with gridWidth: "grid__item small-px--one-half medium-up--one-quarter" %}
          {% endif %}
        {% endfor %}

        {% for item in search.results %}
          {% if item.object_type != 'product' %}
            <script>console.log({{ item | json }})</script>
            <div class="grid__item width100">
            <h3><a href="{{item.url}}" title="{{ item.title }}">{{ item.title }}</a></h3>
            <p>{{ item.content | strip_html | truncatewords:70 }}</p>
            </div>
          {% endif %}
        {% endfor %}
      </div>

      {% if paginate.pages > 1 %}
        <div class="page-width text-center">
          {% include 'pagination' %}
        </div>
      {% endif %}
    {% endif %}

  {% endpaginate %}

</div>